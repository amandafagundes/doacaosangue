<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.teste.elleve.doacaosangue">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/blood"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/blood"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".presenter.RootActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".presenter.LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme" />

        <activity
            android:name=".presenter.HomeActivity"
            android:label="@string/title_activity_home"
            android:theme="@style/AppTheme" />

        <activity
            android:name=".presenter.SignUpActivity"
            android:label="@string/title_activity_signup"
            android:parentActivityName=".presenter.LoginActivity"
            android:theme="@style/AppTheme" />

        <activity
            android:name=".presenter.NewRequestActivity"
            android:label="@string/title_activity_new_request"
            android:parentActivityName=".presenter.HomeActivity"
            android:theme="@style/AppTheme" />

    </application>

</manifest>